    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "outDir": "build",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    }
}